{% comment %} Global dynamic styles {% endcomment %}
{% style %}
  {{ settings.navigation_font | font_face: font_display: 'swap' }}
  {{ settings.body_font | font_face: font_display: 'swap' }}
  {{ settings.heading_font | font_face: font_display: 'swap' }}

    :root {
        /* header colors */
        --header-background-color: {{ settings.header_background_color }};
        --navigation-text-color: {{ settings.header_text_color }};
        --navigation-accent-color: {{ settings.navigation_accent_color }};
        --navigation-text-hover-color: {{ settings.navigation_text_hover_color }};
        --heading-text-color: {{ settings.heading_text_color }};
        /* header font */
        --navigation-font: {{ settings.navigation_font.family }};
        --navigation-font-size: {{ settings.navigation_font_size }}px;

        /* body color */
        --text-color: {{ settings.text_color }};
        --background-color: {{ settings.background_color }};
        /* body font */
        --body-font: {{ settings.body_font.family }};
        --font-size: {{ settings.font_size }};

        /* heading font */
        --heading-font: {{ settings.heading_font.family }};
        --heading-font-size: {{ settings.heading_font_size }}px;

        /* Primary color */
        --primary-background-color: {{ settings.primary_background_color }};
        --primary-text-color: {{ settings.primary_text_color }};
        --primary-background-color-hover: {{ settings.primary_background_color_hover}};
        --primary-text-color-hover: {{ settings.primary_text_color_hover }};
        --secondary-add-to-cart-color: {{ settings.secondary_background_color }};
    }
{% endstyle %}
