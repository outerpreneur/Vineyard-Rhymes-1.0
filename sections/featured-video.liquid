<section id="shopify-section-{{ section.id}}" class="shopify-section featured-video">
  <div class="page-width">
    <div class="grid-cols-2">
      <div class="col-1 flex all-center text-center">
        <div class="container flex all-center space-between">
          <img
            src="{{ section.settings.column_image | image_url }}"
            width="200"
            height=""
            alt="column-image"
            class="featured-image"
          >
          <h2 class="h2">{{ section.settings.title }}</h2>
          <p>{{ section.settings.description }}</p>
          <a href="{{ section.settings.button_url }}" class="primary-button">{{ section.settings.button_text }}</a>
        </div>
      </div>
      <div class="col-2">
        <div class="video-container">
          <iframe
            width="100%"
            height="700px"
            src="https://www.youtube-nocookie.com/embed/-kgrc_EudVA?si=GNvIvjLkK3KZ8gzK&amp;controls=0"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            referrerpolicy="strict-origin-when-cross-origin"
            allowfullscreen
            autoplay
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</section>

{% style %}
    #shopify-section-{{ section.id}} .grid-cols-2 {
      display: grid;
      grid-template-columns: 1fr 3fr;
      gap: 0;
    }

    #shopify-section-{{ section.id}} .col-1 {
      background: linear-gradient(to right, #3d86c9, #8cbae2, #3d86c9);
      background-size: cover;
      color: #fff
    }

    #shopify-section-{{ section.id}} .col-1 .container {
      flex-direction: column;
      min-height: 300px;
    }

    #shopify-section-{{ section.id}} .col-1

    #shopify-section-{{ section.id}} iframe {
      border: none;
    }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id}} .grid-cols-2 {
      grid-template-columns: 1fr;
      gap: 10px;
    }

    #shopify-section-{{ section.id}} .col-1 {
      text-align: center;
    }

    #shopify-section-{{ section.id}} .col-1 .container {
      min-height: 260px;
      padding: 1em;
    }

    #shopify-section-{{ section.id}} .col-2 {
    }

    #shopify-section-{{ section.id}} iframe {
      height: 300px;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Featured Video",
  "settings": [
    {
      "type": "image_picker",
      "id": "column_image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Featured Video"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Watch our latest video to see how our products are made and how they can help you."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "video_url",
      "id": "video_youtube",
      "label": "Video URL",
      "default": "https://www.youtube.com/watch?v=-kgrc_EudVA",
      "info": "Enter the URL of the video you want to display",
      "accept": ["youtube"]
    },
    {
      "type": "video",
      "id": "video_url",
      "label": "Video URL",
      "info": "Enter the URL of the video you want to display"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Featured Video"
    }
  ]
}
{% endschema %}
