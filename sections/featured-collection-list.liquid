  .shopify-section.featured-collection-list {
    padding: 50px 0;
  }

  .shopify-section.featured-collection-list .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .shopify-section.featured-collection-list .collection__list {
    max-width: 500px;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }

