<section id=shopify-section-{{ section.id }} class="shopify-section store-features">
  <div class="container">
    <div class="store-features-inner">
      {% for block in section.blocks %}
        <div class="store-features-item">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}" class="store-features-image">
          {% endif %}
          {% if block.settings.title %}
            <h3 class="store-features-title">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.text %}
            <p class="store-features-text">{{ block.settings.text }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>

  {%  style  %}  
    #shopify-section-{{ section.id }} .store-features {
      padding: 30px 0;
      background-color: {{ section.settings.background_color }};
    }

    #shopify-section-{{ section.id }} .store-features-inner {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    #shopify-section-{{ section.id }} .store-features-item {
      flex: 1;
      text-align: center;
      margin-bottom: 30px;
    }

    #shopify-section-{{ section.id }} .store-features-image {
      height: 50px;
      margin-bottom: 20px;
    }

    #shopify-section-{{ section.id }} .store-features-title {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 10px;
      color: {{ section.settings.text_color }};
    }

    #shopify-section-{{ section.id }} .store-features-text {
      font-size: 16px;
      color: #666;
    }

    /* responsive styles */

    @media (max-width: 768px) {
      #shopify-section-{{ section.id }} .store-features-item {
        flex: 1 1 100%;
      }

      #shopify-section-{{ section.id }} .store-features-image {
        width: 70px;
      }

      #shopify-section-{{ section.id }} .store-features-title {
        font-size: 20px;
      }

      #shopify-section-{{ section.id }} .store-features-text {
            font-size: 14px;
      } 
    }
   
  {%  endstyle  %}

{%  schema %}
{
  "name": "Store Features",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    }
  ],
    "blocks": [
        {
        "type": "store-features",
        "name": "Store Features",
        "settings": [
            {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
            },
            {
            "type": "text",
            "id": "title",
            "label": "Title"
            },
            {
            "type": "text",
            "id": "text",
            "label": "Text"
            }
        ]
        }
    ],
    "presets": [
        {
        "name": "Store Features",
        "blocks": [
            {
            "type": "store-features",
            "settings": {
                "title": "Free Shipping",
                "text": "Free shipping on all orders over $50"
            }
            },
            {
            "type": "store-features",
            "settings": {
                "title": "Easy Returns",
                "text": "Hassle-free returns within 30 days"
            }
            },
            {
            "type": "store-features",
            "settings": {
                "title": "Secure Payments",
                "text": "Secure payment options"
            }
            }
        ]
    }
    ],
    "enabled_on": {
    "groups": ["footer"]
  }
}
{%  endschema  %}
